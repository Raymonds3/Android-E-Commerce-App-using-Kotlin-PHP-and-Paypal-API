<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#404040"
    android:orientation="vertical"
    tools:context=".RegAct" >

    <EditText
        android:id="@+id/reg_mobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Mobile Number"
        android:drawableRight="@drawable/mobile"
        android:layout_margin="20dp"
        android:layout_marginTop="30dp"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:ems="10"
        android:inputType="phone" />

    <EditText
        android:id="@+id/reg_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter password"
        android:drawableRight="@drawable/password"
        android:layout_margin="20dp"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:ems="10"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/reg_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Confirm password"
        android:drawableRight="@drawable/password"
        android:layout_margin="20dp"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:ems="10"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/reg_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your Name"
        android:drawableRight="@drawable/users"
        android:layout_margin="20dp"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:ems="10"
        android:inputType="text" />

    <EditText
        android:id="@+id/reg_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Address"
        android:drawableRight="@drawable/address2"
        android:layout_margin="20dp"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:ems="10"
        android:inputType="text" />

    <TextView
        android:id="@+id/reg_signup"
        android:textColor="#fff"
        android:textSize="22sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign up"
        android:gravity="center"
        android:background="#0055dd"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginTop="30dp"
        android:padding="10dp" />
</LinearLayout>